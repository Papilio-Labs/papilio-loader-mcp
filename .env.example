# Papilio Loader MCP Server Configuration
# Copy this file to .env and customize as needed

# Network Configuration
# Use 0.0.0.0 to allow remote connections, 127.0.0.1 for local only
PAPILIO_BIND_ADDRESS=0.0.0.0
PAPILIO_PORT=8000

# Security
# Set an API key for authentication (leave empty to disable)
# PAPILIO_API_KEY=your-secret-key-here

# CORS Origins (comma-separated list)
# PAPILIO_CORS_ORIGINS=http://localhost:3000,http://192.168.1.100:3000

# Rate Limiting
PAPILIO_RATE_LIMIT=60

# File Upload Limits (in bytes)
# 50 MB = 52428800 bytes
PAPILIO_MAX_UPLOAD_SIZE=52428800

# Serial Port Settings
PAPILIO_DEFAULT_BAUD_RATE=115200
PAPILIO_SERIAL_TIMEOUT=10
